{
  "extends": "../../tsconfigbase",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": []
  },
  "include": ["src/*"],
  "references": [
    {
      "path": "../application"
    },
    {
      "path": "../apputils"
    },
    {
      "path": "../coreutils"
    },
    {
      "path": "../docmanager"
    },
    {
      "path": "../filebrowser"
    },
    {
      "path": "../launcher"
    },
    {
      "path": "../mainmenu"
    },
    {
      "path": "../services"
    },
    {
      "path": "../settingregistry"
    },
    {
      "path": "../statedb"
    },
    {
      "path": "../statusbar"
    },
    {
      "path": "../ui-components"
    }
  ]
}
