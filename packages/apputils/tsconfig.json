{
  "extends": "../../tsconfigbase",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": []
  },
  "include": ["src/*"],
  "exclude": [
    "lib",
    "./lib",
    "./lib/*",
    "./lib/**",
    "./lib/**/*",
    "./lib/dialog.d.ts",
    "./lib/dialog.js",
    "lib/dialog.d.ts",
    "lib/dialog.js",
    "node_modules"
  ],
  "references": [
    {
      "path": "../coreutils"
    },
    {
      "path": "../services"
    },
    {
      "path": "../settingregistry"
    },
    {
      "path": "../statedb"
    },
    {
      "path": "../ui-components"
    }
  ]
}
